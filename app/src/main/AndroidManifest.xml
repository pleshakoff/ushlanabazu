<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ushlanabazu.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature    android:name="android.hardware.camera"  android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/babka"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name="com.ushlanabazu.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ushlanabazu.app.CreateItemActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.showtime"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

    </application>

</manifest>
